#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/runtime:3.1-buster-slim AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["PostcodePopulator/PostcodePopulator.Console/PostcodePopulator.Console.csproj", "PostcodePopulator/PostcodePopulator.Console/"]
RUN dotnet restore "PostcodePopulator/PostcodePopulator.Console/PostcodePopulator.Console.csproj"
COPY . .
WORKDIR "/src/PostcodePopulator/PostcodePopulator.Console"
RUN dotnet build "PostcodePopulator.Console.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "PostcodePopulator.Console.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "RightmovePostcodeToLocationId.PostcodePopulator.Console.dll"]